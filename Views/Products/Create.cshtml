@model ProductDto

@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
       <h2 class="text-center mb-5">New Manga</h2>


       <form method="post" enctype="multipart/form-data">
           <div class="row mb-3">
           <label class="col-sm-4 col-form-label">Name</label>
           <div class="col-sm-8">
               <input class="form-control" asp-for="Name">
               <span asp-validation-for="Name" class="text-danger"></span>

           </div>
        </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Publisher</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Publisher">
                    <span asp-validation-for="Publisher" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Genre</label>
                <div class="col-sm-8">
                    @foreach (var genre in new List<string> { "Psychological", "Thriller", "Action", "Supernatural", "Drama", "Adventure" })
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Genres" value="@genre"
                            @(Model != null && Model.Genres.Contains(genre) ? "checked" : "") />
                            <label class="form-check-label">@genre</label>
                        </div>
                    }
                </div>
            </div>



            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>




            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>

                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>


       </form>
    </div>

   
</div>
